<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:background="@color/light_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/child_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light_green"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filter_User"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/light_gray"
                    android:gravity="center"
                    android:text="FILTER"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:cornerRadius="12dp"
                    app:layout_constraintEnd_toStartOf="@id/sort_User"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sort_User"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/light_gray"
                    android:gravity="center"
                    android:text="SORT"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:cornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/studentTeacherRecycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@color/light_white"
            app:layout_constraintTop_toBottomOf="@id/child_layout"
            tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>