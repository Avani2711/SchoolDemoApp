<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9FEE5"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <ImageView
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7A3B29"
        android:drawableStart="@drawable/keys"
        android:src="@drawable/keys"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="="
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="@id/tvDisplay"
        app:layout_constraintStart_toStartOf="@id/tvDisplay"
        tools:ignore="RtlHardcoded" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/box3"
        app:layout_constraintStart_toStartOf="@id/tvDisplay"
        tools:context=".MainActivity"
        tools:ignore="MissingClass" />

    <Button
        android:id="@+id/box3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay" />

    <EditText
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="#7A3B29"
        android:textAlignment="viewEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box1" />

    <Button
        android:id="@+id/box4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="CE"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box5"
        app:layout_constraintStart_toEndOf="@id/box3"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay" />

    <Button
        android:id="@+id/box5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="C"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box6"
        app:layout_constraintStart_toEndOf="@id/box4"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay" />

    <Button
        android:id="@+id/box6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="0"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/box5"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay" />

    <Button
        android:id="@+id/box7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        app:backgroundTint="#7A3B29"
        android:gravity="center"
        android:text="1"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box8"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box3"/>

    <Button
        android:id="@+id/box8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="2"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box9"
        app:layout_constraintStart_toEndOf="@id/box7"
        app:layout_constraintTop_toBottomOf="@id/box4" />

    <Button
        android:id="@+id/box9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="3"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box10"
        app:layout_constraintStart_toEndOf="@id/box8"
        app:layout_constraintTop_toBottomOf="@id/box5" />

    <Button
        android:id="@+id/box10"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="4"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/box9"
        app:layout_constraintTop_toBottomOf="@id/box6" />

    <Button
        android:id="@+id/box11"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="5"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box12"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box7" />

    <Button
        android:id="@+id/box12"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="6"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box13"
        app:layout_constraintStart_toEndOf="@id/box11"
        app:layout_constraintTop_toBottomOf="@id/box8" />

    <Button
        android:id="@+id/box13"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="7"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box14"
        app:layout_constraintStart_toEndOf="@id/box12"
        app:layout_constraintTop_toBottomOf="@id/box9" />

    <Button
        android:id="@+id/box14"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="8"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/box13"
        app:layout_constraintTop_toBottomOf="@id/box10" />

    <Button
        android:id="@+id/box15"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="9"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box16"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box11" />

    <Button
        android:id="@+id/box16"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="10"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box17"
        app:layout_constraintStart_toEndOf="@id/box15"
        app:layout_constraintTop_toBottomOf="@id/box12" />

    <Button
        android:id="@+id/box17"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="*"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box18"
        app:layout_constraintStart_toEndOf="@id/box16"
        app:layout_constraintTop_toBottomOf="@id/box13" />

    <Button
        android:id="@+id/box18"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="/"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/box17"
        app:layout_constraintTop_toBottomOf="@id/box14" />

    <Button
        android:id="@+id/box19"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="."
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box20"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box15" />

    <Button
        android:id="@+id/box20"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="%"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box21"
        app:layout_constraintStart_toEndOf="@id/box19"
        app:layout_constraintTop_toBottomOf="@id/box16" />

    <Button
        android:id="@+id/box21"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="-"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/box22"
        app:layout_constraintStart_toEndOf="@id/box16"
        app:layout_constraintTop_toBottomOf="@id/box17" />

    <Button
        android:id="@+id/box22"
        android:layout_width="80dp"
        android:layout_height="170dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="+"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/box21"
        app:layout_constraintTop_toBottomOf="@id/box18" />

    <Button
        android:id="@+id/box23"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#7A3B29"
        android:gravity="center"
        android:text="="
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/box22"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box19"
        tools:ignore="MissingClass" />
</androidx.constraintlayout.widget.ConstraintLayout>
