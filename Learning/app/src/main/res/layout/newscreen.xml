<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sabConstaintLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/mid_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/schoolcap"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vidhya_valley_school"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iconImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <com.google.android.material.button.MaterialButton
                android:id="@+id/add_teacher"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="add
                              Teacher"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toStartOf="@id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@id/sabConstaintLayout"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
                tools:layout_editor_absoluteX="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_student"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="add
                      Student"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toEndOf="@id/centerGuideline"
        app:layout_constraintTop_toBottomOf="@id/sabConstaintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_student"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="sort
                              Students"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toStartOf="@id/centerGuideline"
        app:layout_constraintTop_toBottomOf="@id/add_teacher"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/match_name"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="Match
                              Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintTop_toBottomOf="@id/add_student"
        app:layout_constraintStart_toEndOf="@id/centerGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_student"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="search
                              Student"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toStartOf="@id/centerGuideline"
        app:layout_constraintTop_toBottomOf="@id/sort_student"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/all_users"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="users"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintTop_toBottomOf="@id/match_name"
        app:layout_constraintStart_toEndOf="@id/centerGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />


            <EditText
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="Search Name Here"
                android:iconifiedByDefault="false"
                android:inputType=""
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/search_students"
                tools:ignore="HardcodedText,LabelFor,TextContrastCheck" />

    <EditText
        android:id="@+id/searchTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:hint="Search Teacher Here"
        android:iconifiedByDefault="false"
        android:inputType=""
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/search_students"
        tools:ignore="HardcodedText,LabelFor,TextContrastCheck"
        tools:layout_editor_absoluteX="-59dp" />

    <EditText
                android:id="@+id/searchMatchStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="Search Student Here"
                android:iconifiedByDefault="false"
                android:inputType=""
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/searchTeacher"
                tools:ignore="HardcodedText,LabelFor,TextContrastCheck" />


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="Enter Your Name"
                android:inputType=""
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/editSearch"
                tools:ignore="HardcodedText,LabelFor,TextContrastCheck" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="Enter Your Date"
                android:importantForAutofill="no"
                android:inputType=""
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/name"
                tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />

            <EditText
                android:id="@+id/teacher_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="Search Teacher Name Here"
                android:importantForAutofill="no"
                android:inputType=""
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/dob"
                tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />


                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/teal_700"
                    android:gravity="center"
                    android:text="SAVE STUDENT"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <Button
                    android:id="@+id/saveOne"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/teal_700"
                    android:gravity="center"
                    android:text="SAVE TEACHER"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText,TextContrastCheck" />

   </androidx.constraintlayout.widget.ConstraintLayout>

<!--</androidx.core.widget.NestedScrollView>-->