<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sabConstaintLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/mid_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/schoolcap"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vidhya_valley_school"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iconImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <com.google.android.material.button.MaterialButton
                android:id="@+id/add_teacher"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="add
                              Teacher"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toStartOf="@id/centerGuideline"
                app:layout_constraintTop_toBottomOf="@id/sabConstaintLayout"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
                tools:layout_editor_absoluteX="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_student"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="add
                      Student"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toEndOf="@id/centerGuideline"
        app:layout_constraintTop_toBottomOf="@id/sabConstaintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_student"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="sort
                              Students"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@id/centerGuideline"
        app:layout_constraintTop_toBottomOf="@id/add_teacher"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/match_name"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="Match
                              Name"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:cornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/add_student"
        app:layout_constraintStart_toEndOf="@id/centerGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_student"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="search
                              Student"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@id/centerGuideline"
        app:layout_constraintTop_toBottomOf="@id/sort_student"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/all_users"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:text="All
        users"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:cornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/match_name"
        app:layout_constraintStart_toEndOf="@id/centerGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="20dp" />

   </androidx.constraintlayout.widget.ConstraintLayout>

